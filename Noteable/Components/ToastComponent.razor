@if (string.IsNullOrWhiteSpace(Header))
{
	<div class="@Class" role="alert" aria-live="assertive" aria-atomic="true">
		<div class="toast-header">
			<i class="@Icon"></i>
			<strong class="me-auto">Ooops...</strong>
			<button type="button" class="btn-close" @onclick="ToastInstance.Close"></button>
		</div>
		<div class="toast-body">
			This toast doesn't have a Title/Body!
		</div>
	</div>
}
else
{
	<div class="@Class" role="alert" aria-live="assertive" aria-atomic="true">
		<div class="toast-header">
			<i class="@Icon"></i>
			<strong class="me-auto">@Header</strong>
			<button type="button" class="btn-close" @onclick="ToastInstance.Close"></button>
		</div>
		<div class="toast-body">
			@Body
		</div>
	</div>
}

@code{
    [CascadingParameter] private BlazoredToast ToastInstance { get; set; } = default!;

    [Parameter] public string? Header { get; set; }
    [Parameter] public string? Body { get; set; }
	[Parameter] public string? Class { get; set; }
	[Parameter] public string? Icon { get; set; }
	[Parameter] public string? IconColor { get; set; }
	
	protected override void OnInitialized()
	{
		if (string.IsNullOrWhiteSpace(Class))
		{
			Class = "toast";
		}
		if (string.IsNullOrWhiteSpace(Icon))
		{
			Icon = "bi bi-exclamation-triangle-fill";
		}
		if (string.IsNullOrWhiteSpace(IconColor))
		{
			IconColor = "text-warning";
		}
	}
}